<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recipe_image_imageView"
        android:layout_width="209dp"
        android:layout_height="163dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fui_ic_googleg_color_24dp"
        android:contentDescription="@string/recipe_image_description"
        />

    <TextView
        android:id="@+id/recipe_complexity_textView"
        android:layout_width="202dp"
        android:layout_height="34dp"

        app:layout_constraintStart_toEndOf="@+id/recipe_image_imageView"
        app:layout_constraintTop_toBottomOf="@+id/recipe_name_textView" />

    <TextView
        android:id="@+id/recipe_name_textView"
        android:layout_width="201dp"
        android:layout_height="51dp"

        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/recipe_image_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recipe_main_category_textView"
        android:layout_width="203dp"
        android:layout_height="79dp"

        app:layout_constraintStart_toEndOf="@+id/recipe_image_imageView"
        app:layout_constraintTop_toBottomOf="@+id/recipe_complexity_textView" />
</androidx.constraintlayout.widget.ConstraintLayout>