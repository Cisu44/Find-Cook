<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recipe_image_imageView"
        android:layout_width="209dp"
        android:layout_height="163dp"
        android:contentDescription="@string/recipe_image_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fui_ic_googleg_color_24dp" />

    <TextView
        android:id="@+id/recipe_complexity_textView"
        android:layout_width="wrap_content"
        android:layout_height="26dp"

        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/recipe_name_textView" />

    <TextView
        android:id="@+id/recipe_name_textView"
        android:layout_width="201dp"
        android:layout_height="51dp"

        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/recipe_image_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recipe_main_category_textView"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/recipe_image_imageView"
        app:layout_constraintTop_toBottomOf="@+id/recipe_complexity_textView" />

    <TextView
        android:id="@+id/recipe_category_display"
        android:layout_width="67dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:text="@string/recipe_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recipe_main_category_textView"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/recipe_image_imageView"
        app:layout_constraintTop_toBottomOf="@+id/recipe_complexity_textView"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:text="@string/recipe_complexity"
        app:layout_constraintBottom_toTopOf="@+id/recipe_category_display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toEndOf="@+id/recipe_image_imageView"
        app:layout_constraintTop_toBottomOf="@+id/recipe_name_textView"
        app:layout_constraintVertical_bias="0.041" />
</androidx.constraintlayout.widget.ConstraintLayout>